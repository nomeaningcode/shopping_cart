 <div id="<%= dom_id @product %>">

   <%= image_tag @product.photo, width: 200 if @product.photo.attached? %>
 	<p>
    <strong>Producto:</strong>
    <%= @product.title %>
  </p>
  <p>
     <%= @product.description %>
  </p>

  <div>
  	<%= link_to "Editar producto", edit_product_path(@product) %>

  	<%= link_to "Eliminar producto", product_path(@product), data: { turbo_method: :delete, turbo_confirm: t('common.confirm') } %>
  	
  	<%= link_to "Regresar a los productos", products_path %>
  </div>


 </div>
